<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imgHeaderEnvios"
        android:layout_width="match_parent"
        android:layout_height="168dp"
        android:contentDescription="descorarion de arriba"
        android:scaleType="centerCrop"
        android:src="@drawable/top_wave" />

    <!-- Contenedor horizontal para el botón y el título -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="8dp">

        <!-- Botón de regresar -->
        <ImageButton
            android:id="@+id/btnRegresar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="@string/regresar"
            android:background="?attr/selectableItemBackground"
            android:layout_marginEnd="8dp" />

        <!-- Título de la lista -->
        <TextView
            android:text="Lista de Envíos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="center_vertical" />

    </LinearLayout>

    <!-- RecyclerView para mostrar la lista -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerEnvios"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- Imagen decorativa o representativa al final -->
    <ImageView
        android:id="@+id/imgFooterEnvios"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="descorarion de abajo"
        android:scaleType="centerCrop"
        android:src="@drawable/bottom_wave" />

</LinearLayout>
