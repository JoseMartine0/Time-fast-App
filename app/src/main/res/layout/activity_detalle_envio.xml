<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/detalleEnvio"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".DetalleEnvioActivity">

    <!-- Título de la pantalla -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Detalle del Envío"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp" />

    <!-- CardView para mostrar el detalle del envío -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardDetalleEnvio"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardElevation="4dp"
        app:cardCornerRadius="12dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Dirección de origen -->
            <TextView
                android:id="@+id/tvDireccionOrigen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dirección de Origen: Calle 1, Ciudad"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp" />

            <!-- Dirección de destino -->
            <TextView
                android:id="@+id/tvDireccionDestino"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dirección de Destino: Calle 2, Ciudad"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp" />

            <!-- Paquetes contenidos -->
            <TextView
                android:id="@+id/tvPaquetesContenidos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Paquetes: 3 cajas"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp" />

            <!-- Estatus -->
            <TextView
                android:id="@+id/tvEstatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Estatus: En tránsito"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp" />

            <!-- Contacto del cliente -->
            <TextView
                android:id="@+id/tvContactoCliente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contacto: Juan Pérez\nTel: 555-123-4567\nCorreo: juan.perez@mail.com"
                android:textSize="16sp"
                android:textColor="@color/black" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Botón para regresar -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnRegresar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Regresar"
        android:textColor="@color/white"
        app:backgroundTint="@color/purple_500"
        app:layout_constraintTop_toBottomOf="@id/cardDetalleEnvio"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>